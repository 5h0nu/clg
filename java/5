package khasim.program.pkg5;

import java.util.Scanner;

/**
 *
 * @author cs007
 */
public class ShapeDemo {
static class Shape{
    void draw(){
        System.out.print("Drawing a shape");
    }
    void erase(){
        System.out.println("Erasing a shape");
    }
} 
static class Circle extends Shape{
    void draw(){
        System.out.print("Drawing a circle\n");
    }
    void erase(){
        System.out.println("Erasing a circle\n");
    }
}
static class Triangle extends Shape{
    void draw(){
        System.out.println("Drawing a Triangle");
    }
    void erase(){
        System.out.println("Erasing a Triangle\n");
    }
}
static class Square extends Shape{
    void draw(){
        System.out.println("Drawing a square");
    }
    void erase(){
        System.out.println("Erasing a Square\n");
    }
    }

public static void main(String[]args){
    Scanner scanner=new Scanner(System.in);
    Shape shape;
    System.out.println("Choose a shape to draw and erase.");
    System.out.println("1.Circle");
    System.out.println("2.Triangle");
    System.out.println("3.Square");
    System.out.println("Enter your choice (1-3);");
    int choice=scanner.nextInt();
    
    switch(choice){
        case 1:
            shape=new Circle();
            break;
        case 2:
            shape=new Triangle();
            break;
        case 3:
            shape=new Square();
            break;
        default:
            System.out.println("Invalid choice. Defaulting to base Shape.");
            shape=new Shape();        
    }
    shape.draw();
    shape.erase();
    scanner.close();
}
        }

